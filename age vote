#include<iostream>
using namespace std;
int main()
{
    int bjp=0,cong=0,oth=0,age,ch,flag=0;
    char gen;
    do
    {
       cout<<" Enter age and gender"<<endl;
       cin>>age>>gen;
       if(gen=='m')
       {
           if(age>=18)
            flag=1;
          else
            flag=0;
       }
       else
       {
           if(age>=21)
             flag=1;
           else
             flag=0;
       }
       cout<<"\n1.bjp\n2.congress\n3.others\n4.exit"<<endl;
       cout<<"\n Enter your choice"<<endl;
       cin>>ch;
       if(flag==1)
       {
           switch(ch)
           {
                case 1:bjp++;break;
                case 2:cong++;break;
                case 3:oth++;break;
                case 4:break;
                default:cout<<" invalid voice"<<endl;
           }
       }
    }while(ch!=4);
    cout<<" BJP= "<<bjp<<endl;
    cout<<" congress= "<<cong<<endl;
    cout<<" Others= "<<oth<<endl;
}
